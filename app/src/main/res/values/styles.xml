        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/size15</item>
        <item name="android:paddingTop">@dimen/spacing13</item>
        <item name="android:paddingBottom">@dimen/spacing13</item>
    </style>

    <style name="BaseInput">
        <item name="android:layout_height">@dimen/spacing48</item>
        <item name="android:background">@drawable/bg_grey_input</item>
